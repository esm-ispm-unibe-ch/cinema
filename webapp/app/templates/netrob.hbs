<blockquote id="netRob" class='col-xs-12'>
  <!-- <h3 id="netrobTitle">{{text.title}}</h3> -->
  <div class='form-inline'>
    {{#unless statusReady}}
      <h4 class=' controls-title mr-sm-2'>
        {{text.selectionTitle}}
              <span
              onclick="Actions.alertify().message('Choosing “Majority RoB” will lead to a level of concern according to the risk of bias with the greatest total percentage contribution (the greatest block between green, yellow, and red in each bar). The “Highest RoB” will assign a level of concern determined by the highest risk of bias in each bar. Summarizing risk of bias assessments using “Average RoB” uses a weighted average score for each relative effect estimate according to the percentage contribution of studies at each bias level. Details can be found in Section 4.1 of the detailed manual.')" class="info glyphicon glyphicon-info-sign" aria-hidden="true"></span>
      </h4>
      <select onChange="Actions.NetRob.selectRule(this)" {{#if statusReady}}
        disabled {{/if}} class='mr-sm-2 form-inline form-control'>
        {{#each rulesselections}}
          {{#if isAvailable}}
            <option value="{{value}}" {{#if isDisabled}} disabled {{/if}} {{#if isActive}} selected{{/if}}>
            {{label}}
            </option>
          {{/if}}
        {{/each}}
      </select>
      {{/unless}}
      {{#if statusReady}}
        <label class=' controls-title mr-sm-2'>
          {{text.defaultTitle}}
          {{ruleName}}
        </label>
        {{#if customized}}
          <br>
          <label class=' controls-title mr-sm-2'>
            {{#if customizedSingular}}
              {{text.customizedPreSingular}}
              {{numberCustomized}}
              {{text.customizedTitleSingular}}
            {{else}}
              {{text.customizedPrePlural}}
              {{numberCustomized}}
              {{text.customizedTitlePlural}}
            {{/if}}
          </label>
        {{/if}}
      {{/if}}
      {{#if statusReady}}
        <br>
        <button onClick="Actions.NetRob.resetNetRob()" class="btn btn-default
          {{#unless statusReady}} disabled{{/unless}}"> {{text.resetButton}} </button>
        <button class="btn btn-default btn-pad"
          onClick="Actions.NetRob.proceed()" >Proceed</button>
      {{/if}}
  </div>
</blockquote>
<div id="netRobSelector" class='col-xs-12 well collapse in'>
  <ul class='list-inline'>
    {{#each boxes}}
    <li style='border-color:{{color}}' class='well compRobSelector {{#if customized}} customized {{/if}}' id="comp-{{id}}">
        <ul>
          <li>
            <strong>
              Comparison
            </strong>
            <span class='pull-right'>
              <strong>
                {{id}}
            </strong></span>
          </li>
          <li>
            <strong>
             Evidence: {{#if isMixed}}{{../../text.mixedtitle}}{{else}}{{../../text.indirecttitle}}{{/if}}
            </strong>
            <hr>
          </li>
          {{#each rules}}
          <li class=" {{#unless isActive}} robLabel{{/unless}}">
              {{name}}:<strong class='pull-right'>{{label}}</strong>
          </li>
          {{/each}}
              <hr>
          <li>
          {{../text.judgementField}} 
            <select onChange="Actions.NetRob.selectIndividual(this)"
              {{#unless ../statusReady}} disabled {{/unless}} class='mr-sm-2 controls-container'>
              {{#each judgements}}
              <option value="{{../id}}σδel{{id}}" {{#if isDisabled}} disabled {{/if}} {{#if isActive}} selected{{/if}}>
                    {{label}}
                </option>
              {{/each}}
            </select>
          </li>
        </ul>
    {{/each}}
  </ul>
</div>
