<a id="contMatTitle" data-toggle="collapse" href="#conMatrix" class='well btn  tool-title col-xs-12'><h4>Contribution Matrix</h4></a>

<div id="conMatrix" class='col-xs-12 well collapse in'>
  <form id="conMatControls" class='col-md-3 col-sm-12 col-xs-12'>
    <div class='well pull-right col-xs-12'>
      <h4 class=''>
        <span class="pull-left">Controls</span>
        <span class="pull-right glyphicon glyphicon-cog" aria-hidden="true"></span>
      </h4>
      <br>
      <hr>
      <div class=''>
        {{#each controls}}
          {{#if_eq type "radio"}}
            <h4 class='controls-title'>{{title}}</h4>
              {{#each selections}}
                {{#if isAvailable}}
                  <label for={{value}}>{{label}}</label>
                  <input id={{value}} type="radio" name={{name}} value={{value}} {{#if isSelected}}checked="checked"{{/if}}>
                  <!-- {{#each selections}}
                    <label for="tau">Ï„</label>
                    <input id='tau' name="tau" type="number" min="0" style="width:52px" disabled>
                  {{/each}} -->
                {{/if}}
              {{/each}}
          {{/if_eq}}
          {{#if_eq type "select"}}
            <h4 class='controls-title'>{{title}}</h4>
            <select action="{{action}}" class='controls-container form-control' required>
                {{#each selections}}
                  {{#if isAvailable}}
                    <option filter="{{value}}" {{#if isSelected}} selected {{/if}}>
                      {{label}}
                    </option>
                  {{/if}}
                {{/each}}
            </select>
          {{/if_eq}}
          {{#if_eq type "checkbox"}}
            <div class="{{tag}}">
              <h4 class='controls-title'>{{title}}</h4>
              {{#each selections}}
                <label class="checkbox-inline" for="{{value}}">
                  <input type="checkbox" value="{{value}}" {{#if isChecked}} checked {{/if}}>
                  {{label}}
                </label>
              {{/each}}
              <hr>
              <a id="checkAllInt" action='checkAllInt' class="ints btn btn-default">Check All</a>
              <a id="uncheckAllInt" action='uncheckAllInt' class="ints btn btn-default">Uncheck All</a>
            </div>
          {{/if_eq}}
        {{/each}}
      </div>
    </div>
    <a id="createMatrixButton" action='makeConMatrix' class="btn btn-default" data-content="All fields should be filled" rel="popover" data-placement="bottom" data-trigger="hover">Create Matrix</a>
    <a id="clearCM" action='clearCM' class="btn btn-default" >Clear Matrix</a>
    <a id="cancelCM" action='cancelCM' class="btn btn-default"
    style="display:none">Cancel!</a>
  </form>
  <div id='cm-table-container' class='well table-container col-md-9 col-sm-12
    col-xs-12'>
    <div id="conMatloader" class="col-md-offset-2 col-md-8 col-xs-12"
      style="display:none"  aria="downloading contribution matrix"
      aria-hidden="false">
      <div class='row'>
        <div class='col-xs-1'>
          <div class="loader" id="conMatSpinner" style="font-size:12px">
            <!-- <i class="glyphicon glyphicon-cog gly-spin"></i> -->
          </div>
        </div>
        <h4 id="loaderTitle" class="col-xs-11">
        </h4>
      </div>
        <div class="row progress">
            <div id="conMatProgressBar" class="progress-bar active" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width:0%">
                  0%
          </div>
      </div>   
    </div>
    <!-- <span class="btn-full-screen table-resizer pull-right glyphicon glyphicon-fullscreen" aria="fullscreen table" aria-hidden="true"></span> -->
    <span style='display:none' class="btn-minimize table-resizer pull-right glyphicon glyphicon-resize-small" aria="minimize table" aria-hidden="true" ></span>
    <div id='cm-table' class='table'></div>
  </div>
</div>
