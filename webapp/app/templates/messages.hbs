<div class='col-sm-12 col-md-6 col-md-offset-3 bs-callout
{{#if error}}
  bs-callout-danger
{{else}}
  {{#if success}}
    bs-callout-success
    {{else}}
    bs-callout-info
  {{/if}}
{{/if}}
info-screen'>
{{#if projectName}}
  <h3 class='project-name pn'>
    {{projectName}}
  </h3>
  <h3 class='pn' hidden >
    <input maxlength="140" width="100%" class='project-name-edit' type='text' value="{{projectName}}"></input>
  </h3>
{{/if}}
  <h4 class='route-title'>{{{title}}}</h4>
  {{{info}}}
  {{{success}}}
  {{{error}}}
  <br>
  {{{extra}}}
</div>
